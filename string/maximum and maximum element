
using namespace std;

int main(){
	
	
	int arr[]={6,8,99,3,8,11,6,7};
	int n=sizeof(arr)/sizeof arr[0];
	int min=arr[0];
	int max=arr[0];
	for(int i=1; i<n;i++){
		if(arr[i]<min){
			min=arr[i];
		}
		if(arr[i]>max){
			max=arr[i];
		}
	}
	
	cout<<"minimum value: "<<min<<endl;
	cout<<"maximum value: "<<max;
	return 0;
	
}
